@model Rent.Models.Property

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card property-card">
    <img class="card-img-top" src="@(Model.Photo != null ? $"data:image;base64,{Convert.ToBase64String(Model.Photo)}" : "")" alt="Property Image">
    <div class="card-body">
        <h5 class="card-title">Property</h5>
        <dl class="row">
            <dt class="col-sm-4">Description:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
            <dt class="col-sm-4">Address:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>
            <dt class="col-sm-4">City:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.City)</dd>
            <dt class="col-sm-4">Postal Code:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PostalCode)</dd>
            <dt class="col-sm-4">Manager Email:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Manager.Email)</dd>
            <dt class="col-sm-4">Owner Email:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Owner.Email)</dd>
        </dl>
        <div class="text-center">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.PropertyId">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
